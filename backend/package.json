{
  "name": "dragon-vault-backend",
  "version": "0.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "dev": "dotenv -e .env.development -- cross-env NODE_ENV=development tsx watch src/server.ts",
    "build": "tsup",
    "start": "dotenv -e .env.production -- cross-env NODE_ENV=production node dist/server.js",
    "lint": "eslint . --ext .ts && prettier --check .",
    "format": "prettier -w .",
    "dev-migrate": "dotenv -e .env.development -- node-pg-migrate",
    "prod-migrate": "dotenv -e .env.production -- node-pg-migrate",
    "gen-db-types": "dotenv -e .env.development -- kysely-codegen && prettier -w ./src/db/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/postgres": "^6.0.2",
    "argon2": "^0.44.0",
    "dotenv": "^17.2.1",
    "fastify": "^5.5.0",
    "fastify-type-provider-zod": "^6.0.0",
    "http-status-codes": "^2.3.0",
    "kysely": "^0.28.8",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
