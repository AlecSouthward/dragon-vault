{
  "name": "@dragon-vault/backend",
  "private": true,
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env.development -- cross-env NODE_ENV=development tsx watch src/server.ts",
    "build": "tsup",
    "start": "dotenv -e .env.production -- cross-env NODE_ENV=production node dist/server.js",
    "lint": "eslint . --ext .ts --max-warnings 0 && prettier --check .",
    "format": "prettier -w .",
    "pg:migrate": "node-pg-migrate --envPath .env.development -j ts --tsconfig tsconfig.json",
    "pg:gen-types": "dotenv -e .env.development -- kysely-codegen"
  },
  "dependencies": {
    "@drdgvhbh/postgres-error-codes": "^0.0.6",
    "@fastify/busboy": "^3.2.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/multipart": "^9.3.0",
    "@fastify/postgres": "^6.0.2",
    "@fastify/sensible": "^6.0.3",
    "@fastify/session": "^11.1.1",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "argon2": "^0.44.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-type-provider-zod": "^6.1.0",
    "fastify-zod-openapi": "^5.5.0",
    "http-errors": "^2.0.1",
    "kysely": "^0.28.8",
    "pg": "^8.16.3",
    "sharp": "^0.34.5",
    "uuidv7": "^1.0.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "jiti": "^2.6.1",
    "kysely-codegen": "^0.19.0",
    "node-pg-migrate": "^7.6.1",
    "pino-pretty": "^13.1.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
